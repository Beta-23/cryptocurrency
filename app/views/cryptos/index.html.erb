<h1>Cryptos</h1>
<br />
<table class="success table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th>Cost per</th>
      <th>Amount owned</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptos.each do |crypto| %>
      <% if crypto.user_id == current_user.id %>
        <% if crypto.symbol %>
          <% crypto.symbol = crypto.symbol.upcase %>
        <% end %>
        <tr>
        <% for a in @lookup_crypto %>
            <% if crypto.symbol == a["symbol"] %>
                  <td><%= a["name"]%></td>
            <% end %>
        <% end %>
          <td><%= crypto.symbol %></td>
          <td><%= crypto.cost_per %></td>
          <td><%= crypto.amount_owned %></td>
          <td><%= link_to 'Show', crypto %></td>
          <td><%= link_to 'Edit', edit_crypto_path(crypto) %></td>
          <td><%= link_to 'Destroy', crypto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>  
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crypto', new_crypto_path, class:"btn btn-info" %>
